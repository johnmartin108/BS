<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        android:title="Game Settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListPreference
            android:key="ai_difficulty"
            android:title="AI Difficulty"
            android:entries="@array/difficulties"
            android:entryValues="@array/difficulty_values"
            android:dialogTitle="Unit Preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditTextPreference
            android:key="message_preference"
            android:title="Custom Message"
            android:summary="Replace BS! with your own message"
            android:dialogTitle="Custom Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </PreferenceCategory>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBackClicked"
        android:text="Back"/>
</PreferenceScreen>
